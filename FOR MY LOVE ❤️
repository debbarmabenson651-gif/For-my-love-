  <!-- ‚å®Ô∏è Typing Effect -->
  <script>
    const text =
      "Aritrika,\n\nEvery night, when I look at the sky,\nI realize the stars shine a little brighter because of you.\nYou are my calm, my dream, and my forever.\n\nI love you endlessly üíñ";
    let i = 0;
    const speed = 50;

    function typeWriter() {
      if (i < text.length) {
        document.getElementById("typing").innerHTML +=
          text.charAt(i) === "\n" ? "<br>" : text.charAt(i);
        i++;
        setTimeout(typeWriter, speed);
      }
    }
    typeWriter();
  </script>

